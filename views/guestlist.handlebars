<!-- addGuest modal start -->
<div id="modal-addGuest" class="modal">
  <div id="modal-background-addGuest" class="modal-background"></div>

  <div class="modal-content">
    <div class="box">
      <h1 class="title">Add Guest</h1>
      <!-- bulma addGuest form-->
      <form id="addGuest-form">
        <div class="field">
          <label class="label">What is the guest’s first name?</label>
          <div class="control">
            <input
              id="firstname-addGuest"
              class="input"
              type="text"
              placeholder="Text input"
              required
            />
          </div>
        </div>
        <div class="field">
          <label class="label">What is the guest’s last name?</label>
          <div class="control">
            <input
              id="lastname-addGuest"
              class="input"
              type="text"
              placeholder="Text input"
              required
            />
          </div>
        </div>
        <div class="field">
          <label class="label">What is the guest’s street address?</label>
          <div class="control">
            <input
              id="address-addGuest"
              class="input"
              type="text"
              placeholder="Text input"
              required
            />
          </div>
        </div>
        <div class="field">
          <label class="label">What is the guest’s city?</label>
          <div class="control">
            <input
              id="city-addGuest"
              class="input"
              type="text"
              placeholder="Text input"
              required
            />
          </div>
        </div>
        <div class="field">
          <label class="label">What is the guest’s state?</label>
          <div class="control">
            <input
              id="state-addGuest"
              class="input"
              type="text"
              placeholder="Text input"
              required
            />
          </div>
        </div>
        <div class="field">
          <label class="label">What is the guest’s zipcode?</label>
          <div class="control">
            <input
              id="zipcode-addGuest"
              class="input"
              type="text"
              placeholder="Text input"
              minlength="5"
              required
            />
          </div>
        </div>
        <div class="field">
          <label class="label">What is the guest’s e-mail?</label>
          <div class="control">
            <input
              id="email-addGuest"
              class="input"
              type="email"
              name="email"
              placeholder="Text input"
            />
          </div>
        </div>

        <div class="field">
          <label class="label">What is the guest’s phone number?</label>
          <div class="control">
            <input
              id="phonenumber-addGuest"
              class="input"
              type="text"
              placeholder="Text input"
            />
          </div>
        </div>

        <div class="field">
          <div class="control">
            <label class="label">Has the guest RSVP'D?</label>
            <label class="radio">
              <input
                id="rsvp-addGuest"
                type="radio"
                value="1"
                name="Has the guest RSVP’d?"
                required
              />
              Yes
            </label>
            <label class="radio">
              <input
                id="rsvp-addGuest"
                type="radio"
                value="0"
                name="Has the guest RSVP’d?"
                required
              />
              No
            </label>
          </div>
        </div>
        <div class="field">
          <label class="label">Enter a food choice</label>
          <div class="control">
            <div class="select">
              <select id="foodchoice-addGuest">
                <option>Select choice</option>
                <option value="1">Chicken</option>
                <option value="2">Salmon</option>
                <option value="3">Vegetarian</option>
              </select>
            </div>
          </div>
        </div>

        <div class="field">
          <div class="control">
            <button
              id="#submit-addGuest"
              class="button is-primary"
              type="submit"
            >
              Submit
            </button>
          </div>
        </div>
      </form>
      <!--bulma addGuest form end -->
    </div>
  </div>

  <button
    id="modal-close-addGuest"
    class="modal-close is-large"
    aria-label="close"
  ></button>

</div>
<!-- modal addGuest end -->

{{#if guests.length}}
  <div class="overflow">
    <table class="table is-striped mt-6 mx-auto has-text-centered">
      <thead class="is-size-3">
        <tr>
          <th>
            Name
          </th>
          <th>
            Address
          </th>
          <th>
            Phone Number
          </th>
          <th>
            Email
          </th>
          <th>
            RSVP'D
          </th>
          <th>
            Food Choice
          </th>
          <th>
            Edit/Delete
          </th>

        </tr>
      </thead>
      <tbody>
        {{#each guests}}
          <tr>
            <td>
              {{first_name}}
              {{last_name}}
            </td>
            <td>
              {{street}}
              {{city}}
              {{state}}
              {{zipcode}}
            </td>
            <td>
              {{phone_number}}
            </td>
            <td>
              {{email}}
            </td>
            <td>
              {{rsvp}}
            </td>
            <td>
              {{food.food}}
            </td>
            <td>
              <i class="fa fa-pencil is-size-3 pr-5" aria-hidden="true"></i>
              <i class="fa fa-trash is-size-3" aria-hidden="true"></i>
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
{{else}}
  <div>
    <p class="has-text-centered is-size-2">
      No guests to display!
      <br />
      Click the "Add Guest" to get started!
    </p>
  </div>
{{/if}}

<script>("#addGuest-form").validate();</script>
<script src="/javascript/index.js"></script>
<script src="/javascript/addGuest.js"></script>